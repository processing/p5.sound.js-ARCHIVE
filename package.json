{
  "name": "p5sound",
  "repository": "processing/p5.sound.js",
  "scripts": {
    "build": "grunt build",
    "dev": "grunt yui browserify:dev connect:yui watch:quick",
    "docs": "grunt yui",
    "docs:dev": "grunt yui:dev",
    "test-grunt": "grunt",
    "test": "mocha --ui tdd ./test/unit/sound/*.js",
    "lint": "grunt lint",
    "lint:source": "grunt lint:source",
    "lint:samples": "grunt lint:samples",
    "lint:fix": "grunt lint-fix",
    "release": "grunt release-p5sound",
    "prepublishOnly": "grunt prerelease"
  },
  "lint-staged": {
    "ignore": [
      "test/js/**/*.js"
    ],
    "Gruntfile.js": "eslint",
    "docs/preprocessor.js": "eslint",
    "utils/**/*.js": "eslint",
    "tasks/**/*.js": "eslint",
    "test/**/*.js": "eslint",
    "src/**/*.js": [
      "eslint",
      "node --require @babel/register ./utils/sample-linter.js"
    ]
  },
  "version": "0.0.5-alpha",
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/register": "^7.23.7",
    "all-contributors-cli": "^6.26.1",
    "babel-plugin-i18next-extract": "^0.5.0",
    "babel-plugin-istanbul": "^5.2.0",
    "babelify": "^10.0.0",
    "brfs-babel": "^2.0.0",
    "browserify": "^16.5.2",
    "chai": "^3.5.0",
    "connect-modrewrite": "^0.10.2",
    "core-js": "^3.35.1",
    "derequire": "^2.1.1",
    "es6-promise": "^4.2.8",
    "eslint": "^8.56.0",
    "fetch-jsonp": "^1.3.0",
    "file-saver": "^1.3.8",
    "gifenc": "^1.0.3",
    "grunt": "^1.6.1",
    "grunt-cli": "^1.4.3",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-contrib-compress": "^2.0.0",
    "grunt-contrib-connect": "^3.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-uglify": "^5.2.2",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-contrib-yuidoc": "1.0.0",
    "grunt-eslint": "^24.3.0",
    "grunt-minjson": "^0.4.0",
    "grunt-mocha-test": "^0.13.3",
    "grunt-newer": "^1.3.0",
    "grunt-simple-nyc": "^3.0.1",
    "html-entities": "^1.4.0",
    "husky": "^4.3.8",
    "libtess": "^1.2.2",
    "lint-staged": "^4.3.0",
    "marked": "^4.3.0",
    "mocha": "^10.2.0",
    "np": "^8.0.4",
    "open": "^7.4.2",
    "opentype.js": "^0.9.0",
    "pretty-fast": "^0.2.7",
    "promise-map-series": "^0.2.3",
    "puppeteer": "^18.2.1",
    "regenerator-runtime": "^0.13.11",
    "simple-git": "^3.22.0",
    "whatwg-fetch": "^2.0.4"
  },
  "license": "LGPL-2.1",
  "main": "./lib/p5.sound.min.js",
  "files": [
    "license.txt",
    "lib/p5.sound.min.js",
    "lib/p5.sound.js",
    "translations/**"
  ],
  "description": "[![npm version](https://badge.fury.io/js/p5.sound.svg)](https://www.npmjs.com/package/p5)",
  "bugs": {
    "url": "https://github.com/processing/p5.sound.js/issues"
  },
  "homepage": "https://github.com/processing/p5.sound.js#readme",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          [
            "istanbul",
            {
              "include": [
                "src/**/*.js"
              ]
            }
          ]
        ]
      }
    }
  },
  "browserslist": [
    "last 2 versions",
    "not dead"
  ],
  "author": "",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "tone": "^14.8.49"
  }
}
